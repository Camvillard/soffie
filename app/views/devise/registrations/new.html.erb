<div class="welcome-header">
  <h2>welcome to soffie.</h2>
  <h6>your next book is already in your pile.</h6>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                placeholder: "email",
                input_html: { autocomplete: "email" },
                label_html: {class: "hidden-label"} %>
    <%= f.input :password,
                required: true,
                placeholder: "password",
                hint: ("#{@minimum_password_length} characters minimum, please" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                label_html: {class: "hidden-label"} %>
    <%= f.input :password_confirmation,
                required: true,
                placeholder: "confirm password",
                input_html: { autocomplete: "new-password" },
                label_html: {class: "hidden-label"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "create an account", class: "cta-big-white form-big-cta" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
