<% comments = [
"don't forget to stay hydrated",
  "stretch your legs from time to time",
  "all those hours of peace"] %>


<div class="row">

  <% @final_books.each do |book| %>

    <div class="col-md-6">

      <div class="other-results">

        <div class="book-header">

          <div class="book-image">
            <%= image_tag book.image_url %>
          </div>

          <div class="book-details">
            <h3><%= book.title.downcase.capitalize %></h3>
            <hr class="sm-border-blue">
            <h4><%= book.author %></h4>
            <p><%= book.num_pages %> pages <br>
                <%= book.reading_time.to_i / 3600 %> hours of reading, <%= comments.sample(1)[0] %>
            </p>
          </div> <!-- end of book details -->

        </div> <!-- end of .book-header -->

        <div class="book-description">
          <p><%= book.description %></p>
          <%= link_to "great soffie, I'll read this one", users_book_path(id: book.id, users_book: {status: "Reading in progress"}), method: :patch, class: "button-peach" %>
          <%#= link_to "read this book", users_book_path(book), class: "button-peach" %>
        </div>

      </div> <!-- end of other-results -->

    </div> <!-- end of col-md-6 -->

  <% end %>


</div> <!-- end of row -->


<!-- Button trigger modal -->
<button type="button" class="button-peach" data-toggle="modal" data-target="#choose-book-modal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="choose-book-modal" tabindex="-1" role="dialog" aria-labelledby="choose-book-modalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

