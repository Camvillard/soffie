<!-- Button trigger modal -->
<button type="button" class="share-icons" data-toggle="modal" data-target="#add-book-modal">
  <i class="fas fa-plus-circle"></i>
</button>

<!-- modal -->
<div class="modal fade" id="add-book-modal" tabindex="-1" role="dialog" aria-labelledby="addBookModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <h3>add some books to your mood</h3>

        <%= form_tag add_book_path(mood), method: 'patch', id:"add-book-modal-form" do %>
           <h6>add some books to that mood</h6>
           <%= select_tag "books[]", options_from_collection_for_select(UsersBook.all, "id", "title"), class: ".select2-book-modal", id: "book-modal" %>
           <button type="submit" class="button-border-blue">add books</button>
        <% end %>

      </div> <!-- end of modal-body -->

      <div class="modal-footer">
        <button type="button" class="cta-neon" data-dismiss="modal">close</button>
      </div>
    </div> <!-- end of modal body -->
  </div>

</div> <!-- end of modal -->
