<div class="col-xs-12 col-md-6 col-lg-3">
  <div class="mood-card">

    <div class="mood-content">

      <h4><%= mood.name %></h4>
      <h6><%= mood.description %></h6>

      <% if mood.users_books.size != 0 %>
        <p>
          <%= mood.users_books.size %> books in that mood
        </p>
      <% else %>
        <p>seems that there is no book yet in your mood!</p>
      <% end %>
    </div> <!-- end of mood-content -->

    <div class="mood-actions">
      <%= render "partials/add-book", {mood: mood} %>
      <%= link_to '#', class: 'cta-md' do %>
        <i class="fas fa-share"></i>
      <% end %>
    </div> <!-- end of mood actions -->

  </div> <!-- end of mood-card -->

</div> <!-- end of col -->
