<!-- Button trigger modal -->
<button type="button" class="cta-big" data-toggle="modal" data-target="#new-mood-modal">
  add a mood
</button>

<!-- modal -->
<div class="modal fade" id="new-mood-modal" tabindex="-1" role="dialog" aria-labelledby="new-mood-modalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <h3>add a new mood</h3>

        <%= form_tag moods_path, method: 'post', id: "mood-modal-form" do %>

         <input type="text" name='mood[name]' placeholder="name of the mood">
         <input type="text" name='mood[description]' placeholder="description">
         <h6>add some books to that mood</h6>
         <%=  select_tag "books[]", options_from_collection_for_select(UsersBook.all, "id", "title"), class: "select2-mood-modal", id: "mood-modal" %>
         <button type="submit" class="button-border-blue">create a mood</button>
        <% end %>

      </div> <!-- end of modal-body -->

      <div class="modal-footer">
        <button type="button" class="cta-neon" data-dismiss="modal">close</button>
      </div>
    </div> <!-- end of modal body -->
  </div>

</div> <!-- end of modal -->






