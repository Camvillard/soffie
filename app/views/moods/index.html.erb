<div class="container">
  <div class="row">
    <h1>all your moods</h1>
  </div>
  <div class="row">
    <% @moods.each do |mood| %>
      <div class="col-xs-10 col-xs-offset 1 col-md-6 col-lg-4">

        <%= mood.name %>
        <%= mood.description %>
        <%= mood.users_books.first.title if mood.users_books.first.present? %>

      </div>
    <% end %>

  </div>
</div>


