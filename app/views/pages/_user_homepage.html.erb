<div class="container">

  <h1> welcome back, <%= current_user.first_name%></h1>
  <h4>you have <%= current_user.users_books.size %> books in your pile.</h4>
  <p>you are currently reading 4 books and you have 6 moods created.</p>

</div>  <!-- end of container -->

<div id="carousel-container">

  <!-- <div class="container"> -->

  <div class="book-carousel">
    <% @users_books.each do |book| %>
      <div class="book-card">

        <div class="book-image">
        <% if book.image_url.present? %>
          <%= image_tag book.image_url %>
        <% end %>
        </div>

        <div class="book-carousel-description">

          <div class="main-description">
            <h4><%= link_to book.title, users_book_path(book) %></h4>
            <h6><%= book.author %></h6>
          </div>

          <div class="reading-details">
            <% unless book.categories.nil? %>
              <ul>
                <% book.categories.each do |category| %>
                  <li class="book-category"> <%= category.name %></li>
                <% end %>
              </ul>
            <% end %>
            <!-- Reading Progress Bar -->

            <p><%=book.completed_pages%> out of <%= book.num_pages%> pages</p>
              <div id="bar">
                <div id="progress-bar"></div>
              </div>
          </div>

        </div> <!-- end of book carousel description -->
      </div>
    <% end %>
  </div>

  <!-- </div> -->
  <!-- Image Carousel -->

</div> <!-- end of carousel container -->

<!-- Button trigger modal -->
<button type="button" class="font-awesome-modal-trigger" data-toggle="modal" data-target="#myModal">
  <i class="fas fa-book-open"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <h3>how is the book going?</h3>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="cta-neon" data-dismiss="modal">close</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
        <%#= form_tag updating_users_reading_time_path, method: "patch" do %>
          <%#= hidden_field_tag "words_per_minute"%>
          <%#= submit_tag "save my progress", class: "cta-neon" %>
        <%# end %>
      </div>
    </div>
  </div>
</div



